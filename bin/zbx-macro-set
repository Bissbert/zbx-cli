#!/usr/bin/env bash
set -euo pipefail
# shellcheck disable=SC1007,SC2015,SC1090,SC1091
SD="$(CDPATH= cd -- "$(dirname -- "$0")" && pwd)"; PATH="$SD:$PATH"
. "$SD/log-lib"; . "$SD/zbx-lib"
case "${1:-}" in
  -h|--help)
    cat <<'EOF'
Usage: zbx macro-set <host> <{MACRO}> <value>

Set or update a macro on a host.

Details:
  Creates or updates the macro value for the given host.
EOF
    exit 0 ;;
esac
host="${1:-}"; macro="${2:-}"; value="${3:-}"
[ -z "$host" ] || [ -z "$macro" ] || [ -z "$value" ] && { echo "Usage: $(basename "$0") <host> <{MACRO}> <value>"; exit 2; }
hid="$(jq -n --arg host "$host" '{filter:{host:$host}, output:["hostid"]}' | zbx_call host.get | jq -r '.result[0].hostid // empty')"
[ -z "$hid" ] && { log_error "Host not found: $host"; exit 1; }
jq -n --arg hid "$hid" --arg macro "$macro" --arg value "$value" '{hostid:$hid, macros:[{macro:$macro, value:$value}]}' | zbx_call host.update | jq '.result'
