#!/usr/bin/env bash
set -euo pipefail
SD="$(CDPATH= cd -- "$(dirname -- "$0")" && pwd)"; PATH="$SD:$PATH"
. "$SD/log-lib"; . "$SD/zbx-lib"
itemid="${1:-}"; since="${2:-}"; until="${3:-}"
[ -z "$itemid" ] || [ -z "$since" ] || [ -z "$until" ] && { echo "Usage: $(basename "$0") <itemid> <since-epoch> <until-epoch>"; exit 2; }
jq -n --arg itemid "$itemid" --arg since "$since" --arg until "$until" '{output:"extend", history:0, itemids:[$itemid|tonumber], time_from:($since|tonumber), time_till:($until|tonumber), sortfield:"clock", sortorder:"ASC"}' | zbx_call history.get | jq -r '.result[] | [.clock,.value]|@tsv'
