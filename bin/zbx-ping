#!/usr/bin/env bash
set -euo pipefail
# shellcheck disable=SC1007,SC2015,SC1090,SC1091
SD="$(CDPATH= cd -- "$(dirname -- "$0")" && pwd)"; PATH="$SD:$PATH"
. "$SD/log-lib"; . "$SD/zbx-lib"
case "${1:-}" in
  -h|--help)
    cat <<'EOF'
Usage: zbx ping

Lightweight API health check.

Details:
  Output: prints "pong" on success.
EOF
    exit 0 ;;
esac
jq -n '{}' | zbx_call apiinfo.version >/dev/null && echo pong
